<UserControl x:Class="Registry_Manager.UI.RecordSelection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Registry_Manager.UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DockPanel LastChildFill="False">
            <StackPanel Orientation="Vertical" Margin="0 0 20 0">
                <DockPanel Width="200">
                    <TextBlock Text="Records:" DockPanel.Dock="Left" VerticalAlignment="Center" Margin="5"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right">
                        <Button x:Name="addRecord" Content="Add" Width="50" Margin="5"></Button>
                        <Button x:Name="removeRecord" Content="Remove" Width="50" Margin="5"></Button>
                    </StackPanel>
                </DockPanel>
                <ListBox x:Name="recordsList" Width="200" ScrollViewer.CanContentScroll="True" ScrollViewer.VerticalScrollBarVisibility="Auto" Height="340" SelectionChanged="recordsList_SelectionChanged">
                <ListBox.DataContext>
                    <local:RegistryRecord/>
                </ListBox.DataContext>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text ="{Binding Title}"></TextBlock>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
                </StackPanel>
            <StackPanel Orientation="Vertical">
                <DockPanel Margin="0 20 0 10"  Width="200" HorizontalAlignment="Left">
                    <TextBlock Text="Template:" DockPanel.Dock="Left" VerticalAlignment="Center" Margin="5"/>
                    <ComboBox x:Name="TemplatesList" DockPanel.Dock="Right" Width="100" Margin="5"/>
                </DockPanel>
                <DockPanel Margin="5"  Width="610" HorizontalAlignment="Left">
                    <TextBlock Text="Parameters:" DockPanel.Dock="Left" VerticalAlignment="Bottom" />
                    <Button x:Name="ApplyRegistryValuesButton" Content="Apply" Width="60" HorizontalAlignment="Right" DockPanel.Dock="Right" Padding="5"></Button>
                </DockPanel>
                <ListView x:Name="registryKeysList"  Margin="5" Width="610" UseLayoutRounding="False">
                    <ListBox.DataContext>
                        <local:RegistryRecord/>
                    </ListBox.DataContext>
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Key}" Width="200"/>
                            <GridViewColumn Header="Type" DisplayMemberBinding="{Binding Type}" Width="100"/>
                            <GridViewColumn Header="Data" DisplayMemberBinding="{Binding Value}" Width="300"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </StackPanel>
        </DockPanel>
    </Grid>
</UserControl>

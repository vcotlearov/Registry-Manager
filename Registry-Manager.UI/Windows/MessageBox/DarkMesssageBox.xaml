<Window x:Class="Registry_Manager.UI.Windows.MessageBox.DarkMesssageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Registry_Manager.UI.Windows.MessageBox"
        mc:Ignorable="d"
        Title="DarkMesssageBox" Height="100" Width="250" WindowStyle="None" ResizeMode="NoResize" BorderThickness="1" BorderBrush="{StaticResource LightBlueBrush}" Foreground="{StaticResource WhiteBrush}" Background="{StaticResource MenuDarkBrush}" Loaded="Window_Loaded">
    <Grid>
        <DockPanel>
            <DockPanel DockPanel.Dock="Top" Margin="10 20 10 0">
                <Label Name="txtSomeBox" DockPanel.Dock="Top" HorizontalAlignment="Center"  Style="{StaticResource MenuDarkLabelWithDarkText}" Content="{Binding Text, Mode=TwoWay}" Foreground="Gold"></Label>
            </DockPanel>
            <StackPanel DockPanel.Dock="Left" Height="30" Margin="10" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="btnConfirm" Click="btnConfirm_Click" Content="OK" Style="{StaticResource NoBorderMenuDarkButton}"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
